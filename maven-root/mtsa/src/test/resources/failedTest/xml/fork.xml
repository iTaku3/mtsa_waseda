<?xml version="1.0"?>

<animation width="5" height="35">

<draw>
   <compose id="show" type = "switch">
		   <style type="RGBAColor">
			  <param name="red" value="0.13" />
			  <param name="green" value="0.3" />
			  <param name="blue" value="0" />     
			  <primitive type="rectangle">
				<param name="width" value="5" />
				<param name="height" value="35" />
			  </primitive>
			</style>
		<primitive type ="null" />
	</compose>
</draw>

<command name="get">
  <set object="show" param="current" value="1" />
</command>

<command name="put">
  <set object="show" param="current" value="0" />
</command>

</animation>


